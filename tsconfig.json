{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "useDefineForClassFields": true,
    "module": "es2015",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noImplicitThis": false,
    "lib": [
      "ES2015",
      "DOM"
    ],
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}